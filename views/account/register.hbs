{{#section 'title'}}
    Register
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
{{/section}}

{{#section 'js'}}
<script src="/assets/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
	$('#txtDOB').datepicker({
		format: 'd/m/yyyy',
		autoclose: true
	});
</script>

<script type="text/javascript">
    function recaptchaCallback() {
        $('#submitBtn').removeAttr('disabled');
    };
</script>

<script>
    function limitUserName(){
        var limit = 10;
        var getTextValue = document.getElementById("txtUsername").value;
        var getTextLength = getTextValue.length;
        if(getTextLength > limit){     
            getTextValue = getTextValue.substring(0, limit);
            document.getElementById("txtUsername").value = getTextValue;
        }
    }

    function limitPass(){
        var limit = 20;
        var getTextValue = document.getElementById("txtPWD").value;
        var getTextLength = getTextValue.length;
        if(getTextLength > limit){     
            getTextValue = getTextValue.substring(0, limit);
            document.getElementById("txtPWD").value = getTextValue;
        }
    }
</script>
{{/section}}

{{#if showError}}
<div class="row" style="margin-top: 10px">
    <div style="text-align: center; color: red">
        <p class="close" data-dismiss="alert" aria-hidden="true">&times;</p>
        Tài khoản đã tồn tại!
    </div>
</div>
{{/if}}

<div class="row">
     <div class="col-sm-2"></div>
     <div style="color: red">* Vui lòng nhập đầy đủ thông tin yêu cầu</div>
<div class="form-group">

<form action="" method="POST" class="form-horizontal" role="form" style="margin-top: 10px">
	<div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username" required="username" onkeyup="limitUserName()"> 
        </div>
        <p for="txtUsername" class="col-sm-3 control-label">Tên đăng nhập không quá 10 ký tự!</p>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="rawPWD" required="rawPWD" onkeyup="return limitPass();">
        </div>
        <p for="txtPWD" class="col-sm-3 control-label">Password không quá 20 ký tự!</p>
    </div>
    <div class="form-group">
        <label for="txtName" class="col-sm-2 control-label">Họ tên</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtName" placeholder="Họ tên" name="name" required="name">
        </div>
    </div>
    <div class="form-group">
        <label for="txtEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtEmail" placeholder="Email" name="email" required="email">
        </div>
    </div>
    <div class="form-group">
        <label for="txtDOB" class="col-sm-2 control-label">Ngày sinh</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtDOB" placeholder="d/m/yyyy" name="dob" required="dob">
        </div>
    </div>
    <div class="row">
         <div class="col-sm-2"> </div>
         <div class="g-recaptcha col-sm-4" data-callback="recaptchaCallback" data-sitekey="6LdJ8VQUAAAAABAPC2I4InbujcXL1TSgio0kEur3"></div>
    <div class="form-group">
    </div>
	<div class="col-sm-10 col-sm-offset-2">
		<button type="submit" class="btn btn-success" id="submitBtn" disabled>
			<span class="glyphicon glyphicon-ok"></span>
			Đăng ký
		</button>
	</div>
	</div>
</form>