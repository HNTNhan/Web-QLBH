{{#section 'title'}}
    Đăng nhập
{{/section}}

{{#if showError}}
<div class="row" style="margin-top: 10px">
    <div style="text-align: center; color: red">
    	<p class="close" data-dismiss="alert" aria-hidden="true">&times;</p>
    	{{errorMsg}}: Tên đăng nhập hoặc Password của bạn không đúng!
    </div>
</div>
{{/if}}

<form class="form-horizontal" method="post" action="" id="frmLogin" style="margin-top: 10px">
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="rawPWD">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">
            	<span class="glyphicon glyphicon-ok"></span>
            	Đăng nhập
            </button>
        </div>
    </div>
</form>
