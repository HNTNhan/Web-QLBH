{{#section 'title'}}
    Profile
{{/section}}

{{#section 'js'}}
	<script>
	    function limitUserName(){
	        var limit = 10;
	        var getTextValue = document.getElementById("txtUsername").value;
	        var getTextLength = getTextValue.length;
	        if(getTextLength > limit){     
	            getTextValue = getTextValue.substring(0, limit);
	            document.getElementById("txtUsername").value = getTextValue;
	        }
	    }
	</script>
{{/section}}

<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<form action="" method="POST" role="form" class="form-horizontal" style="margin-top: 10px">
			<div class="form-group">
		        <label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
		        <div class="col-sm-4">
		            <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username" required="username" onkeyup="limitUserName()" value="{{layoutVM.curUser.Username}}"> 
		        </div>
		        <p for="txtUsername" class="col-sm-3 control-label">Tên đăng nhập không quá 20 ký tự!</p>
		    </div>
		    <div class="form-group">
		        <label for="txtName" class="col-sm-2 control-label">Họ tên</label>
		        <div class="col-sm-4">
		            <input type="text" class="form-control" id="txtName" placeholder="Họ tên" name="name" required="name" value="{{layoutVM.curUser.Name}}">
		        </div>
		    </div>
		    <div class="form-group">
		        <label for="txtEmail" class="col-sm-2 control-label">Email</label>
		        <div class="col-sm-4">
		            <input type="text" class="form-control" id="txtEmail" placeholder="Email" name="email" required="email" value="{{layoutVM.curUser.Email}}">
		        </div>
		    </div>
		    <div class="form-group">
		        <label for="txtDOB" class="col-sm-2 control-label">Ngày sinh</label>
		        <div class="col-sm-4">
		            <input type="text" class="form-control" id="txtDOB" placeholder="d/m/yyyy" name="dob" required="dob" value="{{dob}}">
		        </div>
		    </div>
		    <div style="text-align: center">
		    	<div class="col-sm-2"></div>
		    	<div class="col-sm-4">
					<button type="submit" class="btn btn-primary">
						<span class="glyphicon glyphicon-ok"></span>
						Cập nhật
					</button>
				</div>
			</div>
		</form>
	</div>
</div>